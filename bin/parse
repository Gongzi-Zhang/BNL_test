#!/bin/bash

script=$(realpath -- ${BASH_SOURCE[0]})
ROOT=$(dirname $script)/..
source ${ROOT}/setup.sh
source ${ROOT}/lib/cali.sh

while [ $# -gt 0 ]
do
    run=$1
    if ! `${ROOT}/bin/caliDB query --run $run --field Type >> /dev/null`; then
	logger fatal "not a valid run: $run" >&2
	shift
	continue
    fi
    run_type=$(${ROOT}/bin/caliDB -p query --run $run --field Type | tail -n1 | xargs)
    if [ "$run_type" = "ptrg" ]; then
	${ROOT}/bin/parse_ptrg $run
	if [ $? -ne 0 ]; then
	    ${ROOT}/bin/caliDB update --run $run --field Flag --value bad
	else
	    scp -r ${ROOT}/figures/${run}/ weibin@cali:public/cali/BNL_test/figures/
	fi
    else
	${ROOT}/bin/convert $run
	${ROOT}/bin/QA $run
	if [ $? -ne 0 ]; then
	    ${ROOT}/bin/caliDB update --run $run --field Flag --value bad
	else
	    scp -r ${ROOT}/figures/${run}/ weibin@cali:public/cali/BNL_test/figures/
	fi
    fi
    shift
done
